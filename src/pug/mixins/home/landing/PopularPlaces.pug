mixin PopularPlacesItem(config)
  .card.card-span.h-100.text-white
    img.img-fluid.h-100.w-100(src=`${CWD}assets/img/gallery/${config.image}` height='375'  alt='...')
    .card-img-overlay.ps-0.d-flex.flex-column.justify-content-between.bg-voyage-gradient
      .mt-auto.px-4.mb-1
        h3.fs-1.fs-md-2.text-white=config.country
        span.text-light.fs--1.me-1
          i.fas.fa-gift
        span.text-light.me-3=config.packages
    a.stretched-link(href='#!')

mixin PopularPlaces
  section.py-7#places.overflow-hidden
    .container.bg-offcanvas-gray-right
      .row.gx-2.mb-2
        .col-12.col-md-12.col-lg-4
          .bg-primary-gradient.bg-offcanvas.h-100
            .row.g-0.justify-content-end
              .col-12
                .p-6.py-md-5.px-md-3.py-lg-8.text-light
                  img.mb-5(src=`${CWD}assets/img/icons/icon-location.svg`  alt='...')
                  h2.mb-2.text-light Popular places
                  p Enjoy the benefits of our packages to the
                    br.d-none.d-lg-block
                    |sites where our visitors have more fun. 
                    br.d-none.d-lg-block
                    |Properly arranged with low costing.
        .col-sm-6.col-lg-4
          +PopularPlacesItem(places[0])
        .col-sm-6.col-lg-4
          +PopularPlacesItem(places[1])
      .row.g-2    
        .col-sm-6.col-lg-4
          .row.g-2
            .col-12 
              +PopularPlacesItem(places[2])
            .col-12 
              +PopularPlacesItem(places[2])
        .col-sm-6.col-lg-4
          .row.g-2 
            .col-12 
              +PopularPlacesItem(places[3])
            .col-12 
              +PopularPlacesItem(places[4])
